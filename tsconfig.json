{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "composite": true,
    "types": [
      "node",
      "jest",
      "@testing-library/react"
    ],
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "src/vite.config.ts"
  ]
}
